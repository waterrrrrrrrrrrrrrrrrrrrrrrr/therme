    </div>
    <div class="live-rows" id="liveRows"></div>
  </div>
  <p class="live-caption">Simulated for illustration ‚Äî real-time visibility available in your dashboard.</p>
</div>
<script>
(function(){
  var ASSETS=['Fridge Unit 1','Freezer Room A','Vehicle 04','Walk-In Chiller','Delivery Van 2','Freezer Unit B','Vehicle 07','Cold Store 3'];
  var DRIVERS=['Jason M.','Rachel T.','Ben A.','Sarah K.','Tom N.','Priya L.','Chris W.','Dana F.'];
  var STATUSES=['active','active','active','active','done','overdue'];
  function ri(a,b){return Math.floor(Math.random()*(b-a+1))+a;}
  function ro(a){return a[ri(0,a.length-1)];}
  function randTemp(s){
    if(s==='overdue') return (ri(6,15)).toFixed(1);
    if(s==='done') return '';
    var t=(ri(-220,35)/10).toFixed(1);
    return t;
  }
  function tempClass(t,s){
    if(s==='done'||s==='overdue') return '';
    var v=parseFloat(t);
    if(v<0) return 'cold';
    if(v>4) return 'warn';
    return 'ok';
  }
  function buildRows(){
    var used={},rows=[];
    while(rows.length<6){
      var a=ro(ASSETS);if(used[a])continue;used[a]=1;
      var s=ro(STATUSES);
      var t=randTemp(s);
      rows.push({asset:a,driver:s==='done'?'‚Äî':ro(DRIVERS),status:s,temp:t,tc:tempClass(t,s)});
    }
    return rows;
  }
  function renderLive(){
    var rows=buildRows();
    var live=rows.filter(function(r){return r.status==='active';}).length;
    var over=rows.filter(function(r){return r.status==='overdue';}).length;
    var logs=ri(38,74);
    var mL=document.getElementById('mLive');
    var mO=document.getElementById('mOver');
    var mLg=document.getElementById('mLogs');
    var clk=document.getElementById('liveClk');
    var rCont=document.getElementById('liveRows');
    if(!mL||!rCont) return;
    // Fade out
    [mL,mO,mLg].forEach(function(el){el.style.opacity='0.3';});
    rCont.style.opacity='0.3';
    setTimeout(function(){
      mL.textContent=live;
      mO.textContent=over;
      mLg.textContent=logs;
      clk.textContent=new Date().toLocaleTimeString();
      rCont.innerHTML=rows.map(function(r){
        var tempStr=r.status==='done'?'Shift complete':r.status==='overdue'?'Last: '+ri(1,4)+'h ago':r.temp+'¬∞C';
        return '<div class="live-row">'+
          '<span class="live-badge lb-'+r.status+'">'+(r.status==='active'?'Active':r.status==='overdue'?'Overdue':'Done')+'</span>'+
          '<span class="live-asset">'+r.asset+'</span>'+
          '<span class="live-driver">'+r.driver+'</span>'+
          '<span class="live-temp '+r.tc+'">'+tempStr+'</span>'+
          '</div>';
      }).join('');
      // Fade in
      [mL,mO,mLg].forEach(function(el){el.style.opacity='1';});
      rCont.style.opacity='1';
    },300);
  }
  renderLive();
  setInterval(renderLive,4000);
})();
</script>

