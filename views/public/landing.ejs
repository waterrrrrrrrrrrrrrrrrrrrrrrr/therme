    }
    body { background: var(--bg); color: var(--text); font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; line-height: 1.6; }
    a { text-decoration: none; }

    /* ‚îÄ‚îÄ Nav ‚îÄ‚îÄ */
    nav { background: rgba(15,17,23,0.95); backdrop-filter: blur(10px); border-bottom: 1px solid var(--border); position: sticky; top: 0; z-index: 100; }
    .nav-inner { max-width: 1200px; margin: 0 auto; padding: 0 24px; height: 64px; display: flex; align-items: center; justify-content: space-between; }
    .nav-logo { font-size: 20px; font-weight: 700; color: var(--blue-light); letter-spacing: -0.02em; }
    .nav-logo span { color: var(--text); }
    .nav-logo:hover { color: var(--blue-light); }
    .nav-links { display: flex; gap: 28px; align-items: center; }
    .nav-links a { color: var(--muted); font-size: 14px; transition: color 0.2s; }
    .nav-links a:hover { color: var(--text); }
    .btn-nav { background: var(--blue); color: white !important; padding: 8px 20px; border-radius: 8px; font-weight: 500; font-size: 14px; transition: background 0.2s; }
    .btn-nav:hover { background: #2563eb !important; }

    /* ‚îÄ‚îÄ Hero ‚îÄ‚îÄ */
    .hero { max-width: 1200px; margin: 0 auto; padding: 100px 24px 80px; text-align: center; }
    .hero-badge { display: inline-block; background: rgba(59,130,246,0.1); border: 1px solid rgba(59,130,246,0.3); color: var(--blue-light); padding: 5px 16px; border-radius: 20px; font-size: 13px; margin-bottom: 28px; }
    .hero h1 { font-size: clamp(36px, 6vw, 60px); font-weight: 800; letter-spacing: -0.03em; line-height: 1.1; margin-bottom: 24px; background: linear-gradient(135deg, #e6edf3 0%, #8b949e 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; }
    .hero h1 span { -webkit-text-fill-color: var(--blue-light); }
    .hero p { font-size: 18px; color: var(--muted); max-width: 580px; margin: 0 auto 40px; }
    .hero-actions { display: flex; gap: 14px; justify-content: center; flex-wrap: wrap; }
    .btn-primary { background: var(--blue); color: white; padding: 14px 32px; border-radius: 10px; font-size: 16px; font-weight: 600; transition: background 0.2s, transform 0.1s; display: inline-block; }
    .btn-primary:hover { background: #2563eb; transform: translateY(-1px); }
    .btn-secondary { background: transparent; color: var(--text); border: 1px solid var(--border); padding: 14px 32px; border-radius: 10px; font-size: 16px; font-weight: 500; transition: border-color 0.2s; display: inline-block; }
    .btn-secondary:hover { border-color: var(--blue); color: var(--blue-light); }

    /* ‚îÄ‚îÄ Live Fleet Preview ‚îÄ‚îÄ */
    .live-preview { max-width: 1000px; margin: 0 auto 80px; padding: 0 24px; }
    .live-app { background: var(--bg2); border: 1px solid var(--border); border-radius: 16px; overflow: hidden; box-shadow: 0 24px 80px rgba(0,0,0,0.5); }
    .live-topbar { background: var(--bg3); padding: 12px 20px; display: flex; align-items: center; gap: 8px; border-bottom: 1px solid var(--border); }
    .live-dot { width: 10px; height: 10px; border-radius: 50%; }
    .live-title { margin-left: 12px; color: var(--muted); font-size: 13px; flex: 1; }
    .live-clock { font-size: 11px; color: var(--muted); font-variant-numeric: tabular-nums; }
    .live-pulse { width: 8px; height: 8px; border-radius: 50%; background: #22c55e; display: inline-block; animation: pulse 2s infinite; }
    @keyframes pulse { 0%,100%{opacity:1;transform:scale(1)} 50%{opacity:.5;transform:scale(1.3)} }
    .live-metrics { display: grid; grid-template-columns: repeat(3, 1fr); gap: 0; border-bottom: 1px solid var(--border); }
    .live-metric { padding: 18px 20px; border-right: 1px solid var(--border); }
    .live-metric:last-child { border-right: none; }
    .live-metric-label { font-size: 11px; color: var(--muted); text-transform: uppercase; letter-spacing: 0.06em; margin-bottom: 6px; }
    .live-metric-val { font-size: 32px; font-weight: 800; transition: opacity 0.3s; }
    .live-rows { padding: 0; transition: opacity 0.4s; }
    .live-row { display: flex; align-items: center; padding: 11px 20px; border-bottom: 1px solid rgba(42,45,58,0.6); gap: 12px; transition: opacity 0.4s; }
    .live-row:last-child { border-bottom: none; }
    .live-badge { padding: 3px 10px; border-radius: 20px; font-size: 11px; font-weight: 700; flex-shrink: 0; min-width: 64px; text-align: center; }
