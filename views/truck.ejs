    <div class="box" style="border-top: 2px solid #ff3b3b;">
      <button id="showEndShift" class="danger" type="button" onclick="showEndShiftForm()">End Shift</button>
      <form id="endShiftForm" method="POST" action="/app/truck/<%= truck.id %>/end-shift" style="display:none;" onsubmit="prepareSignature()">
        <input type="hidden" name="_security-token" value="<%= csrfToken %>">
        <input name="cabin" type="number" step="0.1" placeholder="Final Cabin Temp (¬∞C)" required class="temp-input">

<% if (isSignoffDay) { %>
          <div class="friday-box">
            <h3 style="color: #00e676; margin-top: 0;">üìÖ Week-End Requirements</h3>
            <% if (requireOdometer) { %>
            <input type="number" name="odometer" placeholder="Final Odometer Reading" <% if (requireOdometer) { %>required<% } %> class="temp-input">
            <% } %>
