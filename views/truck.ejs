<button
  type="button"
  class="edit-toggle-btn"
  style="width: auto; height: 28px; padding: 0 10px; margin: 0; font-size: 11px; background: #444; color: white;"
  onclick="enableEdit(event, this)"
>
  Edit
</button>          </div>

          <% if (t.type === "start") { %>
<div class="temp-edit-grid">
  <div class="temp-row">
    <span class="temp-label">Dispatch:</span>
    <input name="dispatch" value="<%= t.dispatch %>" type="number" step="0.1" class="edit-input" disabled>
    <span class="temp-unit">¬∞C</span>
  </div>

  <div class="temp-row">
    <span class="temp-label">Chiller:</span>
    <input name="chiller" value="<%= t.chiller %>" type="number" step="0.1" class="edit-input" disabled>
    <span class="temp-unit">¬∞C</span>
  </div>

  <div class="temp-row">
    <span class="temp-label">Freezer:</span>
    <input name="freezer" value="<%= t.freezer %>" type="number" step="0.1" class="edit-input" disabled>
    <span class="temp-unit">¬∞C</span>
  </div>
</div>

          <% } else { %>
<div class="temp-row">
  <span class="temp-label">Cabin:</span>
  <input name="cabin" value="<%= t.cabin %>" type="number" step="0.1" class="edit-input" disabled>
  <span class="temp-unit">¬∞C</span>
</div>          <% } %>
        </form>
      <% }) %>
    </div>
    <hr style="border: 0; border-top: 1px solid #444; margin: 20px 0;">
  <% } %>

  <h3>New Entry</h3>
