  margin: auto;
  padding: 40px 12px 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

@media (max-width: 600px) {
  .mobile-wrap {
    padding-top: 70px;
  }
}

@media (max-width: 480px) {
  .box {
    border-radius: 14px;
  }

  .question-text {
    padding: 0 6px;
  }
}
    .friday-box {
      background: #1a1a1c;
      padding: 15px;
      border-radius: 8px;
      margin-top: 15px;
      border: 1px solid #444;
    }

    .sig-label {
      display: block;
      margin-top: 10px;
