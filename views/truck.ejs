      <input type="hidden" name="_security-token" value="<%= csrfToken %>">
      <input name="cabin" type="number" step="0.1" placeholder="Cabin Temp (¬∞C)" required>
      <button type="submit">Log Cabin Temp</button>
    </form>
  <% } %>
</div>

