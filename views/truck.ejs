      </form>
    </div>

  <% } else { %>
    <div class="box" style="border:1px solid #00e676;background:linear-gradient(135deg,rgba(0,230,118,0.08),rgba(0,230,118,0.02));">
      <div style="display:flex;align-items:center;justify-content:space-between;margin-bottom:16px;">
        <h2 style="margin:0;">‚úÖ Shift Complete</h2>
        <span style="font-size:28px;">üéâ</span>
      </div>
      <p style="color:#aaa;font-size:14px;margin:0 0 16px;">Your shift has been successfully recorded. Safe travels!</p>
      <% log.temps.forEach(t => { %>
        <div class="temp-log">
          <% const parsed = new Date(t.time); %>
          <strong><%= parsed.toLocaleTimeString('en-AU', { timeZone: timezone || 'Australia/Perth', hour:'2-digit', minute:'2-digit' }) %></strong><br>
          <% if (t.type === "start") { %>
            Dispatch: <%= t.dispatch %>¬∞C | Chiller: <%= t.chiller %>¬∞C | Freezer: <%= t.freezer %>¬∞C
          <% } else { %>
            Cabin: <%= t.cabin %>¬∞C
          <% } %>
        </div>
      <% }) %>
      <a href="/app" style="display:block;width:100%;height:52px;margin-top:16px;border-radius:6px;background:#00e676;color:#111;text-align:center;line-height:52px;text-decoration:none;font-weight:700;font-size:16px;">Return to Workspace Home</a>
    </div>
  <% } %>

  <script>
    const questions = <%- JSON.stringify(checklistQuestions) %>;
    let current = 0;
    const questionText = document.getElementById("questionText");
    const submitBtn = document.getElementById("submitBtn");
    const backBtn = document.getElementById("backBtn");
    const questionBox = document.getElementById("questionBox");

    function showQuestion() {
      if (questionText) questionText.innerText = questions[current];
    }
   function answer(value) {
  const input = document.getElementById("q" + (current + 1));
  if (!input) return;

  input.value = value ? "yes" : "no";
  current++;

  if (current >= questions.length) {
    questionBox.style.display = "none";
    submitBtn.style.display = "block";
    backBtn.style.display = "block";
  } else {
    showQuestion();
    if (current > 0) {
      backBtn.style.display = "block";
    }
  }

  setTimeout(() => {
    backBtn.scrollIntoView({ behavior: "smooth", block: "nearest" });
  }, 50);
}
    function goBack() {
      if (current === 0) return;
      current--;
      document.getElementById("q" + (current + 1)).value = "";
      questionBox.style.display = "block";
      submitBtn.style.display = "none";
      if(current === 0) backBtn.style.display = "none";
      showQuestion();
    }
    showQuestion();

    function showEndShiftForm() {
      document.getElementById('showEndShift').style.display = 'none';
      document.getElementById('endShiftForm').style.display = 'block';
      if (typeof resizeCanvas === 'function') setTimeout(resizeCanvas, 50);
    }

    function confirmChecklist() {
      document.getElementById('checklistForm').submit();
    }

    // Signature Logic
    const canvas = document.getElementById('sig-canvas');
    if (canvas) {
      const ctx = canvas.getContext('2d');
      let drawing = false;
      window.resizeCanvas = function() {
        if (canvas.offsetWidth > 0) {
canvas.width = 180;
canvas.height = 30;

ctx.strokeStyle = "#000";
ctx.lineWidth = 2;
ctx.lineCap = "round";

        }
      };
      window.addEventListener('resize', resizeCanvas);
      const getPos = (e) => {
        const rect = canvas.getBoundingClientRect();
        const clientX = e.touches ? e.touches[0].clientX : e.clientX;
        const clientY = e.touches ? e.touches[0].clientY : e.clientY;
        return { x: clientX - rect.left, y: clientY - rect.top };
      };
      const startDraw = (e) => { drawing = true; ctx.beginPath(); const p = getPos(e); ctx.moveTo(p.x, p.y); };
      const doDraw = (e) => { if (!drawing) return; const p = getPos(e); ctx.lineTo(p.x, p.y); ctx.stroke(); };
      const endDraw = () => { drawing = false; };
      canvas.addEventListener('mousedown', startDraw);
      canvas.addEventListener('mousemove', doDraw);
      window.addEventListener('mouseup', endDraw);
      canvas.addEventListener('touchstart', (e) => { startDraw(e); e.preventDefault(); }, { passive: false });
      canvas.addEventListener('touchmove', (e) => { doDraw(e); e.preventDefault(); }, { passive: false });
      canvas.addEventListener('touchend', endDraw);
      window.clearSig = () => ctx.clearRect(0, 0, canvas.width, canvas.height);
      window.prepareSignature = () => { document.getElementById('sig-input').value = canvas.toDataURL(); };
    }
  </script>
  <script>
    function enableEdit(e, btn) {
  e.preventDefault();
  e.stopPropagation();

  const form = btn.closest('form');
  const inputs = form.querySelectorAll('.edit-input');

  inputs.forEach(input => {
    input.disabled = false;
  });

  btn.textContent = "Update";

  btn.onclick = function () {
    form.submit();
  };
}
  </script>
